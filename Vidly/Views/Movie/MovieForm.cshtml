
@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>Add Movie</h2>
}
else
{
    <h2>Edit</h2>
}


@using (Html.BeginForm("Save", "Movie"))
{

    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(n => n.Movie.Name)
        @Html.TextBoxFor(n => n.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(n => n.Movie.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(r => r.Movie.ReleaseDate)   @*"{0:d MMM yyyy}"*@
        @Html.TextBoxFor(r => r.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(r => r.Movie.ReleaseDate)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Genres"), "Select Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.GenreId)
    </div>

    <div class="form-group">
        @Html.LabelFor(k => k.Movie.NumberInStock)
        @Html.TextBoxFor(k => k.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(k => k.Movie.NumberInStock)
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}


@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

}